@using AprendiendoAsp.Net.Models.ViewModels
@model CelularViewModel

@{
    ViewData["Title"] = "Crear Celular";
}

<h1>Crear Celular</h1>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

     <div class="form-group">
        <label asp-for="Modelo" class="form-label"></label>
        <input asp-for="Modelo" class="form-control"/>
        <span asp-validation-for="Modelo" class="text-danger"></span>
     </div>

    <div class="form-group">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarcaId" class="form-label"></label>
        <select asp-for="MarcaId" asp-items="@ViewBag.Marcas" class="form-select"></select>
        <span asp-validation-for="MarcaId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Crear</button>
        <button asp-action="Index" class="btn btn-secondary">Cancelar</button>
    </div>
    
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
